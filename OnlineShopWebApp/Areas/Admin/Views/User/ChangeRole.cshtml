@model OnlineShopWebApp.Areas.Admin.Models.ChangeRoleVM

<form method="post">
    <div>
        <div>
            <h3 class="text-center">Редактирование прав пользователя @Model.UserName</h3>
        </div>
        <div class="row">
            <div class="border">
                @await Html.PartialAsync("AdminPanel")
            </div>
            <div class="col-9 border">
                <fieldset>
                    <legend>Выберите доступны роли:</legend>
                    @foreach (var role in Model.AllRoles)
                    {
                        <input type="checkbox" name="roles" value="@role.Name"
                               @(Model.UserRoles.Contains(role) ? "checked=\"checked\"" : "") /> @role.Name <br />
                        }
                </fieldset>
                <div>
                    <div class="font-weight-bold" asp-validation-summary="ModelOnly"></div>
                </div>
                <div>
                    <div>
                        <button class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="ChangeRole" type="submit">Изменить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>