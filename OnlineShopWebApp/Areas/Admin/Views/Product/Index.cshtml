@model List<ProductVM>

<div>
    <div>
        <h3 class="text-center">Список товаров</h3>
    </div>
    <div class="row">
        <div class="border">
            @await Html.PartialAsync("AdminPanel")
        </div>
        <div class="col-9">
            <div>
                <div>
                    <a asp-controller="Product" asp-action="Add">Добавить новый продукт</a>
                </div>
                <div>
                    <table class="table border">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Название</th>
                                <th>Цена</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Id="@item.Id" role="button">@item.Id </a>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Cost</td>
                                    <td>
                                        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-Id="@item.Id">Редактировать</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger" href="#" data-toggle="modal" data-target="#deleteModal-@item.Id">Удалить</button>
                                        <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myDeleteModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="myDeleteModalLabel">Удалить товар</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">Вы действительно хотите удалить '@item.Name'?</div>
                                                    <div class="modal-footer">
                                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id">Удалить</a>
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
