@model List<ProductVM>

<div class="text-center">
    <h4 class="display-4">Сравнение товаров</h4>
</div>
@if (Model == null || Model?.Count() == 0)
{
    <h5>Не найдено товаров в сравнении.</h5>
    <a class="btn btn-primary" href="home/index" role="button">Продолжить покупки.</a>
}
@if (Model.Count() == 4)
{
    <h5>Можно добавить только 4 товара для сравнения.</h5>
}
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <div>
                <img class="card-img-top" src="@product.Image" />
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <a style="color:black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Id="@product.Id">
                        <h5>@product.Name</h5>
                    </a>
                    <h6 class="text-muted">@product.Cost руб.</h6>
                </div>
                <div class="button-container d-flex flex-column">
                    <div class="d-flex">
                        <a class="btn btn-dark favorite-btn" asp-area="" asp-controller="Favorites" asp-action="Add" asp-route-Id="@product.Id" role="button">&#x2665;</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Compare" asp-action="Delete" asp-route-Id="@product.Id" role="button">Убрать</a>
                    </div>
                    <div>
                        <a class="btn btn-dark mt-2 w-100" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-Id="@product.Id" role="button">Добавить в корзину</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>