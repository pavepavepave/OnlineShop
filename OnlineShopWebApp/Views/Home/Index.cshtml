@model List<ProductVM>

<div class="text-center">
    <h2 class="display-4">Интернет портал художника</h2>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3" style="margin: 10px 0px 0px 0px">
            <div class="card shadow card-height">
                <div>
                    <img class="card-img-top" src="@product.Image" />
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <a style="color:black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Id="@product.Id">
                            <h5>@product.Name</h5>
                        </a>
                        <h6 class="text-muted">@product.Cost руб.</h6>
                    </div>
                    <div class="button-container d-flex flex-column">
                        <div class="d-flex">
                            <a class="btn btn-dark favorite-btn" data-toggle="tooltip" asp-area="" asp-controller="Favorites" asp-action="Add" asp-route-Id="@product.Id" role="button" title="Добавление товаров в избранное">&#x2665;</a>
                            <a class="btn btn-dark" data-toggle="tooltip" asp-area="" asp-controller="Compare" asp-action="Add" asp-route-Id="@product.Id" role="button" title="Можно сравнить до 4 товаров">Сравнить</a>
                        </div>
                        <div>
                            <a class="btn btn-dark mt-2 w-100" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-Id="@product.Id" role="button">Добавить в корзину</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>