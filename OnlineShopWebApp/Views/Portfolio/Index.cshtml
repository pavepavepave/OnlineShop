@model List<PaintingVM>

<div class="text-center">
    <h2 class="display-4">Портфолио моих работ</h2>
</div>

<div class="row">
    @foreach (var painting in Model)
    {
        <div class="col-md-4" style="margin-top: 10px">
            <div class="card shadow portfolio-height">
                <img class="card-img-top portfolio-image" src="@painting.ImagePath[0]" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <a style="color:black" asp-area="" asp-controller="Painting" asp-action="Index" asp-route-Id="@painting.Id">
                            <h5>@painting.Name</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>